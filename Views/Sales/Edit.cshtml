@model LabelSite.Models.SalesData
<div class="col-lg-12">
    <div class="grid">
        <p class="grid-header">Изменить продажу</p>
        <div class="grid-body">
            <div class="item-wrapper">
                <div class="row mb-3">
                    <div class="col-md-8 mx-auto">
                        <form asp-action="Edit">
                            <div class="form-group showcase_text_area">
                                <label asp-for="SaleDate" class="control-label">Дата продажи</label>
                                <input asp-for="SaleDate" class="form-control" />
                                <span asp-validation-for="SaleDate" class="text-danger"></span>
                            </div>
                            <div class="form-group showcase_text_area">
                                <label class="control-label">Продукты</label>
                                <div id="productList">
                                    @if (ViewBag.Products != null)
                                    {
                                        @foreach (var product in (SelectList)ViewBag.Products)
                                        {
                                            <div class="product-item">
                                                <input type="checkbox" name="selectedProducts" value="@product.Value" /> @product.Text
                                                <input type="number" name="quantities" class="form-control quantity-input" placeholder="Кол-во" />
                                            </div>
                                        }
                                    }
                                </div>
                                <span class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Изменить</button>

                            <!-- Скрытые поля для автоматически заполняемых значений -->
                            <input type="hidden" name="Amount" value="0" />
                            <input type="hidden" name="SalesGoal" value="100000" />
                            <input type="hidden" name="SalesPercentage" value="0" />
                            <input type="hidden" name="MonthStart" value="" />
                            <input type="hidden" name="MonthEnd" value="" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

